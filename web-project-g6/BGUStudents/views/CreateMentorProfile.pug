meta(name="viewport", content="width=device-width,initial-scale=1")
meta(charset="utf-8")
link(rel="stylesheet", href="../stylesheets/template.css")
link(rel="stylesheet", href="../stylesheets/CreateMentorProfile.css")
title#pageTitle פתיחת פרופיל חונך
.grid-container
  .header
    .grid-container-header
      .logo
        a(href="HomePage.html")
          img.logoPic(src="../images/mainLogo.png", alt="Logo")
      .navi(dir="rtl")
        ul.naviTable(dir="rtl")
          li
            a.activeClasses(href="yearlyPage.html") שנתונים פעילים
          li
            a.grades(href="grades.html") גיליון ציונים
          li
            a.mentors(href="MentorsSearch.html") מאגר חונכים
          li
            a.marathons(href="#") מרתונים ועזרתונים
            ul
              li
                a(href="activeAzraton.html") עזרתונים/מרתונים פעילים
              li
                a(href="newMarathon.html") פתיחת עזרתון/מרתון
          li
            a.Education(href="map.html") מפה
      .pic
        #greeting
          a#username
          br
          button#login_function(onclick="login_function()")
        #profile_pic_div
          img#profile_pic(src="../images/profilePic.png")
  .main(dir="rtl")
    .regForm
      h1 פתיחת פרופיל חונכ/ת
      form(action="#", onsubmit="sendRequestforOpenMentorProfile()")
        .profileAttribute
          .attributeName
            text שם פרטי
          .attributeValue
            input#fname.inputText(type="text")
            br
        .profileAttribute
          .attributeName
            text שם משפחה
          .attributeValue
            input#lname.inputText(type="text")
            br
        .profileAttribute
          .attributeName
            text קצת עליי
          .attributeValue
            textarea#about.inputText(style="height:200px")
            br
        .profileAttribute
          .attributeName
            text קורסים
          .attributeValue
            .courseInsertSection
              label.insertCouseLabel(for="course") הכנס קורס:
              input#course.insertCouseInput(type="text", name="course")
              br
              .insertCouseButtonWrapper
                button.insertCouseButton(type="button", onclick="onInsertCourse()") בחר
            #courses.coursesView.
              
              
        .profileAttribute
          .attributeName
            text זמינות
          .attributeValue
            select.inputSelect
              option(value="notAvailable") לא זמינ/ה כלל
              option(value="weekly") מפגש בשבוע
              option(value="twoWeek") מפגש בשבועיים
              option(value="high") גבוהה מאוד
            br
        .profileAttribute
          .attributeName
            text שיעורים פרטיים
          .attributeValue
            select.inputSelect
              option(value="yes") כן
              option(value="no") לא
            br
        .profileAttribute
          .attributeName
            text מחיר
          .attributeValue
            input#price.inputText(type="text")
            br
        .profileAttribute
          .attributeName
            text פלאפון
          .attributeValue
            input#phone.inputText(type="text")
            br
        .profileAttribute
          .attributeName
            text תמונת פרופיל
          .attributeValue
            input#image.inputImage(type="file", accept="image/*")
        .buttonWrapper
          input.smallButton(type="submit", value="שלח")
          br
  .footer
    .footerLogo
      img(src="../images/footerLogo.png", alt="Logo")
    .down
      ul.footerBar(dir="rtl")
        li
          a(href="https://in.bgu.ac.il/Pages/default.aspx", target="_blank") לאתר האוניברסיטה
        li#aguda
          a(href="https://bgu4u.co.il/", target="_blank") לאתר האגודה הסטודנטיאלית
        li
          a(href="contactUs.html") צור קשר
        li
          a(href="aboutUs.html") מי אנחנו?
script(src="../javascripts/users.js")
script(src="../javascripts/CreateMentorProfile.js")