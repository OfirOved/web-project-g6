meta(name="viewport", content="width=device-width,initial-scale=1")
meta(charset="utf-8")
link(rel="stylesheet", href="../stylesheets/template.css")
link(rel="stylesheet", href="../stylesheets/MentorProfile.css")
title#pageTitle פרופיל חונך
.grid-container
  .header
    .grid-container-header
      .logo
        a(href="HomePage.html")
          img.logoPic(src="../images/mainLogo.png", alt="Logo")
      .navi(dir="rtl")
        ul.naviTable(dir="rtl")
          li
            a.activeClasses(href="yearlyPage.html") שנתונים פעילים
          li
            a.grades(href="grades.html") גיליון ציונים
          li
            a.mentors(href="MentorsSearch.html") מאגר חונכים
          li
            a.marathons(href="#") מרתונים ועזרתונים
            ul
              li
                a(href="activeAzraton.html") עזרתונים/מרתונים פעילים
              li
                a(href="newMarathon.html") פתיחת עזרתון/מרתון
          li
            a.Education(href="map.html") מפה
      .pic
        #greeting
          a#username
          br
          button#login_function(onclick="login_function()")
        #profile_pic_div
          img#profile_pic(src="../images/profilePic.png")
  .main(dir="rtl")
    div
      .mentor
        .attributeProfile
          .attributeName
            #mentorPic.
              
              
            #mentorName.
              
              
          .attributeValueWithColor
            h3 קצת עלי...
            #mentorAbout.
              
              
        .attributesBorder
          .attribute
            .attributeName
              h3 קורסים
            #mentorCourses.attributeValue.
              
              
          .attribute
            .attributeName
              h3 זמינות
            #mentorAvailability.attributeValue.
              
              
          .attribute
            .attributeName
              h3 שיעורים פרטיים
            #mentorPrivateLessons.attributeValue.
              
              
          .attribute
            .attributeName
              h3 מחיר לשעה
            #mentorPricePerHour.attributeValue.
              
              
          .attribute
            .attributeName
              h3 טלפון
            #mentorPhone.attributeValue.
              
              
      #addReview.attributesBorder
        h3(style="padding-right: 10px; padding-top: 10px;") הוספת תגובה
        .attribute
          .attributeName
            h3 שם הכותב
          .attributeValue
            input.textInput#writer(type="text")
        .attribute
          .attributeName
            h3 תוכן
          .attributeValue
            textarea#comment.textareaInput
        .attribute
          .attributeName
            h3 דירוג
          #stars
        div(style="text-align: left; padding: 15px;")
          button.smallButton(type="button", onclick="onAddReview()") הוסף
      .attributesBorder
        .attributeName
          h2 תגובות
        #reviews.
          
          
      .bottomBar
        button#backTo(type="button", onclick="window.location.href = \'MentorsSearch.html\';") בחזרה לחיפוש
  .footer
    .footerLogo
      img(src="../images/footerLogo.png", alt="Logo")
    .down
      ul.footerBar(dir="rtl")
        li
          a(href="https://in.bgu.ac.il/Pages/default.aspx", target="_blank") לאתר האוניברסיטה
        li#aguda
          a(href="https://bgu4u.co.il/", target="_blank") לאתר האגודה הסטודנטיאלית
        li
          a(href="contactUs.html") צור קשר
        li
          a(href="aboutUs.html") מי אנחנו?
